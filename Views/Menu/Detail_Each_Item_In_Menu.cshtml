@{ Layout = "_Layout";
}
@model IEnumerable<WebsiteF4.Models.Menu>

@{
    var id_razor = "";
    int soluong_razor = 1;
}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    @*<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>*@
    <link href="~/css/chitietsanpham_Q.css">

</head>
<body>
    <div class="container pt-3 my-3">
        @foreach (var item in Model)
        {
            id_razor = item.MENU_ID;
            <div class="card">
                <div class="container-fliud">
                    <div class="wrapper row">

                        
                        <div class="preview col-md-6">
                            <!-- link hình ảnh -->
                            <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="pic-1-tab" id="pic-1"><img src=@item.MENU_IMG /></div>
                            <!-- link hình ảnh.// -->
                        </div>
                        <div class="details col-md-6">
                            <h3 class="product-title">@item.MENU_NAME</h3>

                            <h4 class="price">Price: <span>@item.MENU_PRICE</span></h4>
                            <h4 class="price">Calo: <span>@item.CALORIES</span></h4>
                            <div class="sizes">
                                <span>Size:</span>
                                <input type="radio" name="size" data-toggle="tooltip" title="small">s &nbsp;
                                <input type="radio" name="size" data-toggle="tooltip" title="medium"> m &nbsp;
                                <input type="radio" name="size" data-toggle="tooltip" title="large"> l &nbsp;
                                <input type="radio" name="size" data-toggle="tooltip" title="xtra large"> xl &nbsp;
                            </div>
                            <div class="amount">
                                <label for="amount">Số lượng: </label>
                                <input type="number" id="amount" name="amount" min="1" size="4">
                            </div>
                            <script>
                                    @soluong_razor = $('input').val();
                            </script>
                            <div class="action">
                                <a href="/Order/Order1?id=@id_razor&soluong=@soluong_razor" class="btn btn-lg btn-warning text-uppercase "> Buy now </a>
                                <a href="# " onclick="Add_Item()" class="btn btn-lg btn-outline-warning text-uppercase "> <i class="fas fa-shopping-cart "></i> Add</a>
                            </div>
                        </div>
                        <div class="p-lg-4"></div>
                        <hr />
                        <div class="pt-md-3">
                            <p><strong>Mô tả:</strong></p>
                            <p class="product-description"> @item.MENU_DESCRIPTION</p>
                        </div>
                        <!-- .preview.// -->
                        
                    </div>
                    <!-- .wrapper.// -->
                </div>
                <!-- container-fruit.// -->
         
            </div>
        }
            <!-- card.// -->


        </div>

    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
</body>
</html>





